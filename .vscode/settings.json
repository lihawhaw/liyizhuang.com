{
  "prettier.documentSelectors": ["**/*.astro"],
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": ["source.fixAll", "source.fixAll.stylelint"],
  "files.associations": {
    "*.css": "tailwindcss",
    "*.mdx": "markdown"
  },
  "editor.quickSuggestions": {
    "strings": true
  }
}
